{
  "name": "uchiwa",
  "version": "0.2.2",
  "private": true,
  "scripts": {
    "jshint": "grunt jshint",
    "js-files": "find . -name '*.js' ! -path './node_modules/*' !  -path './public/bower_components/*'",
    "karma": "karma start test/karma/conf.js",
    "lintspaces": "lintspaces -t -d spaces -i js-comments -s 2 `npm run -s js-files`",
    "mocha": "grunt simplemocha",
    "postinstall": "bower --allow-root install",
    "preupdate-webdriver": "npm install",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor/conf.js",
    "protractor-debug": "protractor debug test/protractor/conf.js",
    "prestart": "npm install",
    "start": "node app.js",
    "test": "npm run jshint && npm run lintspaces && npm run karma && npm run mocha",
    "update-webdriver": "webdriver-manager update"
  },
  "dependencies": {
    "async": "^0.2.10",
    "basic-auth": "^1.0.0",
    "bunyan": "1.0.1",
    "bower": "^1.3.4",
    "ejs": "^0.8.8",
    "express": "^4.8.7",
    "express-bunyan-logger": "^1.0.0",
    "express.io": "^1.1.13",
    "socket.io": "1.0.*",
    "underscore": "1.6.*",
    "yargs": "^1.2.6"
  },
  "devDependencies": {
    "chai": "~1.9.1",
    "grunt": "~0.4.5",
    "grunt-cli": "~0.1.13",
    "grunt-contrib-jshint": "~0.10.0",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-newer": "~0.7.0",
    "grunt-simple-mocha": "~0.4.0",
    "jshint-stylish": "~0.4.0",
    "lintspaces-cli": "~0.0.4",
    "load-grunt-tasks": "~0.6.0",
    "grunt-contrib-sass": "~0.8.1",
    "time-grunt": "~0.2.1",
    "grunt-karma": "^0.8.2",
    "istanbul": "~0.2.6",
    "karma": "~0.12.0",
    "karma-cli": "~0.0.4",
    "karma-coverage": "~0.2.6",
    "karma-jasmine": "~0.2.0",
    "karma-junit-reporter": "~0.2.1",
    "karma-phantomjs-launcher": "~0.1.4",
    "mocha": "~1.21.4",
    "phantomjs": "~1.9.7",
    "protractor": "~1.1.1"
  }
}
